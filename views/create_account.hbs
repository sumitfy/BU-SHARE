<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="shortcut icon" href="/static/images/favicon-BU.png" type="image/x-icon">
  <title>BU-Share</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;

    }

    html,
    body {
      height: 100%;
      width: 100%;
      background-color: #111827;
    }

    .parent-container {
      display: flex;
      flex-wrap: wrap;
      width: 100%;
      height: 100vh;
    }

    .left {
      padding: 20px;
      min-width: 40%;
      display: flex;
      justify-content: center;
      align-items: center;
      flex: 50%;

    }

    .right {
      flex: 50%;
    }

    @media(min-width:880px) {
      .right {
        margin: 3rem;
      }
    }

    @media (max-width:880px) {
      .parent-container {
        display: grid;
        grid-template-rows: 2fr, 8fr;
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>

<body>
  <div class="parent-container">

    <div class="left">
      {{!-- <img src="/static/images/undraw_travel_together_re_kjf2.svg" alt="taxi"> --}}
      <div>
        <img id="img1" class="w-auto h-30 mr-2" src="/static/images/logo.jpg" alt="logo">
      </div>
    </div>
    <div class="right">
      <section class="bg-black-50 ">
        <div class="flex flex-col items-center justify-center px-6 py-0 mx-auto md:h-screen lg:py-0">
          <div
            class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
            <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
              <div style="display: flex; justify-content:center">
                <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
                  Create Your Account
                </h1>
              </div>
              <form id="createAccount" class="space-y-4 md:space-y-6" action="/submit-form" method="POST">
                <div>
                  <label for="name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Your
                    Name</label>
                  <input type="text" name="name" id="name"
                    class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    placeholder="Enter Name" required />
                </div>
                <div>
                  <label for="email" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Your
                    email</label>
                  <input type="email" name="email" id="email" 
                    class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    placeholder="name@company.com" required />
                </div>
                <div class="sm:col-span-2">
                  <label for="phone" class="block text-sm font-medium leading-6 text-white">Contact
                    number</label>
                  <div class="relative mt-2.5">
                    <div class="absolute inset-y-0 left-0 flex items-center">
                      <label for="country" class="sr-only">Country</label>
                      <select id="country" name="country"
                        class="h-full flex rounded-md border-0 bg-transparent bg-none py-0 pl-4 pr-0 text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm">
                        <option>IND</option>
                      </select>
                    </div>
                    <input type="tel" name="phone" id="phone" autocomplete="tel" pattern="[0-9]{10}"
                      class="block w-full rounded-md border-0 px-3.5 py-2 pl-20 bg-gray-600 text-white shadow-sm ring-2  ring-gray-500 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                      required />
                  </div>
                </div>
                <div>
                  <label for="password"
                    class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Password</label>
                  <input type="password" name="password" id="password" placeholder="••••••••" minlength="6"
                    class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    required /> 
                </div>
                <div>
                  <label for="confirm-password"
                    class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Confirm password</label>
                  <input type="password" name="confirm-password" id="confirm-password" placeholder="••••••••"
                    class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    required />
                </div>
                <div class="flex items-start">
                  <div class="flex items-center h-5">
                    <input id="terms" aria-describedby="terms" type="checkbox" onclick="showHidePassword()"
                      class="w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-primary-300 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-primary-600 dark:ring-offset-gray-800"/>
                  </div>
                  <div class="ml-3 text-sm">
                    <label for="terms" class="font-light text-gray-500 dark:text-gray-300">Show Password</label>
                  </div>
                </div>
                <button id="create-acc-btn" onclick="validatepass()" type="button" style="border: 1px solid rgb(136, 136, 136)"
                  class="w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">Create
                  an account</button>
                <h1 style="display: flex; justify-content:center"
                  class="text-sm font-light text-gray-500 dark:text-gray-400">or</h1>
                <a href="/create-with-google" style="display:flex ;justify-content:center; gap: 10px; border: 1px solid rgb(136, 136, 136)"
                  class="w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800"
                  type="submit"><img class="w-6 h-6" src="https://www.svgrepo.com/show/475656/google-color.svg"
                    loading="lazy" alt="google logo">Create with Google</a>
                {{!-- <p class="text-sm font-light text-gray-500 dark:text-gray-400">
                  Already have an account? <a href="/login"
                    class="font-medium text-primary-600 hover:underline dark:text-primary-500">Login here</a>
                </p> --}}
                <button onclick=window.location.href="/login"
                  style="display:flex ;justify-content:center; gap: 10px; border: 1px solid rgb(136, 136, 136) "
                  class="w-full text-white bg-blue-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800"
                  type="button">Already have an account? <a href="/login"
                    class="font-medium text-primary-600 hover:underline dark:text-primary-500">Login here</a></button>
              </form>
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>
  {{#if errorMessage}}
    <div id="accoundexist" tabindex="-1"
      class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
      <div class="relative p-4 w-full max-w-md max-h-full">
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
          <div class="p-4 md:p-5 text-center">
            <svg class="mx-auto mb-4 text-gray-400 w-12 h-12 dark:text-gray-200" aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M10 11V6m0 8h.01M19 10a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
            </svg>
            <h3 class="mb-5 text-lg font-normal text-white dark:text-white">{{errorMessage}}This Email is already Registered. Please Login
            </h3>
            <a type="button" href="/login" data-modal-hide="popup-modal"
              class="text-white bg-red-600 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800 font-medium rounded-lg text-sm inline-flex items-center px-5 py-2.5 text-center me-2">
              Login
            </a>
          </div>
        </div>
      </div>
    </div>
  {{/if}}
  <div id="popup-modal" tabindex="-1"
    class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-md max-h-full">
      <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
        <div class="p-4 md:p-5 text-center">
          <svg class="mx-auto mb-4 text-gray-400 w-12 h-12 dark:text-gray-200" aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M10 11V6m0 8h.01M19 10a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
          </svg>
          <h3 class="mb-5 text-lg font-normal text-white dark:text-white">Your Password and Confirm Password do not
            match !!!
          </h3>
          <a type="button" onclick="closeModel()" data-modal-hide="popup-modal"
            class="text-white bg-red-600 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800 font-medium rounded-lg text-sm inline-flex items-center px-5 py-2.5 text-center me-2">
            OK
          </a>
        </div>
      </div>
    </div>
  </div>
  <div id="pass-compulsory" tabindex="-1"
    class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-md max-h-full">
      <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
        <div class="p-4 md:p-5 text-center">
          <svg class="mx-auto mb-4 text-gray-400 w-12 h-12 dark:text-gray-200" aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M10 11V6m0 8h.01M19 10a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
          </svg>
          <h3 class="mb-5 text-lg font-normal text-white dark:text-white">Enter your Password !!!
          </h3>
          <a type="button" onclick="closeModel()" data-modal-hide="popup-modal"
            class="text-white bg-red-600 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800 font-medium rounded-lg text-sm inline-flex items-center px-5 py-2.5 text-center me-2">
            OK
          </a>
        </div>
      </div>
    </div>
  </div>
  <div id="pass-length" tabindex="-1"
    class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-md max-h-full">
      <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
        <div class="p-4 md:p-5 text-center">
          <svg class="mx-auto mb-4 text-gray-400 w-12 h-12 dark:text-gray-200" aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M10 11V6m0 8h.01M19 10a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
          </svg>
          <h3 class="mb-5 text-lg font-normal text-white dark:text-white">Password length should be greater than 6 !!!
          </h3>
          <a type="button" onclick="closeModel()" data-modal-hide="popup-modal"
            class="text-white bg-red-600 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800 font-medium rounded-lg text-sm inline-flex items-center px-5 py-2.5 text-center me-2">
            OK
          </a>
        </div>
      </div>
    </div>
  </div>
  <div id="name-compulsory" tabindex="-1"
    class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-md max-h-full">
      <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
        <div class="p-4 md:p-5 text-center">
          <svg class="mx-auto mb-4 text-gray-400 w-12 h-12 dark:text-gray-200" aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M10 11V6m0 8h.01M19 10a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
          </svg>
          <h3 class="mb-5 text-lg font-normal text-white dark:text-white">Enter your Name !!!
          </h3>
          <a type="button" onclick="closeModel()" data-modal-hide="popup-modal"
            class="text-white bg-red-600 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800 font-medium rounded-lg text-sm inline-flex items-center px-5 py-2.5 text-center me-2">
            OK
          </a>
        </div>
      </div>
    </div>
  </div>
  <div id="email-compulsory" tabindex="-1"
    class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-md max-h-full">
      <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
        <div class="p-4 md:p-5 text-center">
          <svg class="mx-auto mb-4 text-gray-400 w-12 h-12 dark:text-gray-200" aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M10 11V6m0 8h.01M19 10a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
          </svg>
          <h3 class="mb-5 text-lg font-normal text-white dark:text-white">Enter your Email !!!
          </h3>
          <a type="button" onclick="closeModel()" data-modal-hide="popup-modal"
            class="text-white bg-red-600 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800 font-medium rounded-lg text-sm inline-flex items-center px-5 py-2.5 text-center me-2">
            OK
          </a>
        </div>
      </div>
    </div>
  </div>
  <div id="accoundexist" tabindex="-1"
    class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-md max-h-full">
      <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
        <div class="p-4 md:p-5 text-center">
          <svg class="mx-auto mb-4 text-gray-400 w-12 h-12 dark:text-gray-200" aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M10 11V6m0 8h.01M19 10a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
          </svg>
          <h3 class="mb-5 text-lg font-normal text-white dark:text-white">This Email is already Registered. Please Login
          </h3>
          <a type="button" href="/login" data-modal-hide="popup-modal"
            class="text-white bg-red-600 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800 font-medium rounded-lg text-sm inline-flex items-center px-5 py-2.5 text-center me-2">
            Login
          </a>
        </div>
      </div>
    </div>
  </div>
  <script>
    function getQueryParam(name) {
      const urlParams = new URLSearchParams(window.location.search);
      return urlParams.get(name);
    }
    const message = getQueryParam('message');

    // Display an alert if a message is present
    if (message == "1") {
      document.getElementById('accoundexist').style.display = 'flex';
    }
    function checkPassLength(){
      //var length = document.getElementById('password').value.length;
      //console.log(length);
      //if(length < 6){
      document.getElementById('pass-length').style.display = 'flex';
      //}
    }
    function validatepass() {
      
      var password = document.getElementById("password").value;
      var email = document.getElementById("email").value;
      var name = document.getElementById("name").value;
      var confirmPassword = document.getElementById("confirm-password").value;
      
      if(email == ""){
        document.getElementById('email-compulsory').style.display = 'flex';
        return false;
      }
      if(name == ""){
        document.getElementById('name-compulsory').style.display = 'flex';
        return false;
      }
      if(password == ""){
        document.getElementById('pass-compulsory').style.display = 'flex';
        return false;
      }
      if (password.length < 6) {
            document.getElementById('pass-length').style.display = 'flex';
            return false; // Prevent form submission
        }
      else if (password != confirmPassword) {
        document.getElementById('popup-modal').style.display = 'flex';
        return false;
      }
      //else {
      //  document.getElementById('createAccount').submit();
      //}
      else{
        document.getElementById('create-acc-btn').type = 'submit';
      }
    }
    function showHidePassword(){
      var passwordField1 = document.getElementById("password");
      var passwordField2 = document.getElementById("confirm-password");

        if (passwordField1.type === "password" || passwordField2.type === "password" ) {
            passwordField1.type = "text";
            passwordField2.type ="text" 
        } else {
            passwordField1.type = "password";
            passwordField2.type = "password";
        }
    }
    function closeModel() {
      document.getElementById('pass-length').style.display = 'none';
      document.getElementById('popup-modal').style.display = 'none';
      document.getElementById('pass-compulsory').style.display = 'none';
      document.getElementById('email-compulsory').style.display = 'none';
      document.getElementById('name-compulsory').style.display = 'none';
    }
  </script>
</body>

</html>